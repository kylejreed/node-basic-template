{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@types": ["./src/types.ts"]
    }
  },
  "include": [
    "src"
  ],
}